// ------BASIC TEXT
// --------------------
text = { ( word ~ " "* )+ }
word = _{ ( ASCII_ALPHA | ASCII_DIGIT )+ }
//---------------------------------------------------------------

// ------READING FILE
// --------------------
file = { heading } 
//---------------------------------------------------------------

// ------HEADING
// --------------------
heading = { heading1 | heading2 | heading3 | heading4 | heading5 | heading6 }
heading1 = { "#" ~ " " ~ text ~ NEWLINE ~ body_heading1 }
heading2 = { "##" ~ " " ~ text ~ NEWLINE ~ body_heading2}
heading3 = { "###" ~ " " ~ text ~ NEWLINE ~ body_heading3}
heading4 = { "####" ~ " " ~ text ~ NEWLINE ~ body_heading4}
heading5 = { "#####" ~ " " ~ text ~ NEWLINE ~ body_heading5}
heading6 = { "######" ~ " " ~ text ~ NEWLINE ~ body_heading6}

body_heading1 = { ( text | ( heading2 | heading3 | heading4 | heading5 | heading6 ) | NEWLINE)* }
body_heading2 = { ( text | ( heading3 | heading4 | heading5 | heading6 ) | NEWLINE )* }
body_heading3 = { ( text | ( heading4 | heading5 | heading6 ) | NEWLINE )* }
body_heading4 = { ( text | ( heading5 | heading6 ) | NEWLINE )* }
body_heading5 = { ( text | heading6 | NEWLINE )* }
body_heading6 = { ( text | NEWLINE)* }
//---------------------------------------------------------------